<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share my_robot_bringup)/urdf/SimAssemb.urdf.xacro" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')"/>
    </node>

    <node pkg="controller_manager" exec="ros2_control_node">
        <param from="$(find-pkg-share my_robot_bringup)/config/ros2_controller.yaml" />
        
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')"/>
    </node> 

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
    <node pkg="controller_manager" exec="spawner" args="joint_position_controller" />
        
    <node pkg="rviz2" exec="rviz2" output="screen"
          args="-d /home/rushil/quadruped_ws/src/urdf_config.rviz" />
        
</launch>